extends layout

block content
  h1= article.title
  h5 Written by #{author}
  br
  p= article.body
  hr
  if user
    if user.id ==article.author
      a.btn.btn-primary(href="/articles/edit/"+article._id, style={"margin-right": "1em"}) Edit
      a.btn.btn-danger.delete-article(href="#", data-id=article._id) Delete
